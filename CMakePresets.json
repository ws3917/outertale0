{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "vcpkg-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "debug-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_FLAGS_RELEASE": "-O2 -DNDEBUG -ffunction-sections -fdata-sections",
                "CMAKE_CXX_FLAGS_RELEASE": "-O2 -DNDEBUG -ffunction-sections -fdata-sections",
                "CMAKE_EXE_LINKER_FLAGS_RELEASE": "-Wl,--gc-sections -s",
                "CMAKE_SHARED_LINKER_FLAGS_RELEASE": "-Wl,--gc-sections -s",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": true
            }
        },
        {
            "name": "release-base-msvc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_FLAGS_RELEASE": "/O2 /DNDEBUG /Gy /Gw",
                "CMAKE_CXX_FLAGS_RELEASE": "/O2 /DNDEBUG /Gy /Gw",
                "CMAKE_EXE_LINKER_FLAGS_RELEASE": "/MACHINE:X64 /OPT:REF /OPT:ICF",
                "CMAKE_SHARED_LINKER_FLAGS_RELEASE": "/MACHINE:X64 /OPT:REF /OPT:ICF",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": true
            }
        },
        {
            "name": "win-msvc-base",
            "hidden": true,
            "inherits": "vcpkg-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "v143,host=x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "custom-x64-windows-win7",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_C_FLAGS": "/utf-8 /MP /D_WIN32_WINNT=0x0601 /DWINVER=0x0601 /W4",
                "CMAKE_CXX_FLAGS": "/utf-8 /MP /EHsc /D_WIN32_WINNT=0x0601 /DWINVER=0x0601 /W4",
                "X_VCPKG_APPLOCAL_DEPS_INSTALL": true
            }
        },
        {
            "name": "linux-gcc-base",
            "hidden": true,
            "inherits": "vcpkg-base",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "custom-x64-linux",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "win-msvc-debug",
            "inherits": [
                "win-msvc-base",
                "debug-base"
            ],
            "displayName": "Windows MSVC (Debug)"
        },
        {
            "name": "win-msvc-release",
            "inherits": [
                "win-msvc-base",
                "release-base-msvc"
            ],
            "displayName": "Windows MSVC (Release)"
        },
        {
            "name": "linux-gcc-debug",
            "inherits": [
                "linux-gcc-base",
                "debug-base"
            ],
            "displayName": "Linux GCC (Debug)"
        },
        {
            "name": "linux-gcc-release",
            "inherits": [
                "linux-gcc-base",
                "release-base"
            ],
            "displayName": "Linux GCC (Release)"
        }
    ]
}